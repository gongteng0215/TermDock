{
  "name": "termdock",
  "version": "0.1.0",
  "description": "Cross-platform SSH + SFTP desktop client for developers and operators.",
  "packageManager": "pnpm@10.29.2",
  "main": "dist-electron/main/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"pnpm run dev:renderer\" \"pnpm run dev:main\" \"pnpm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.node.json --watch",
    "dev:electron": "wait-on http://localhost:5273 file:dist-electron/main/main.js file:dist-electron/main/preload.cjs && node scripts/run-electron-dev.mjs",
    "build": "pnpm run build:renderer && pnpm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.node.json",
    "typecheck": "tsc --noEmit -p tsconfig.json && tsc --noEmit -p tsconfig.node.json"
  },
  "dependencies": {
    "keytar": "^7.9.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ssh2": "^1.17.0",
    "xterm": "^5.3.0",
    "@xterm/addon-fit": "^0.11.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.6",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/ssh2": "^1.15.5",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^33.2.1",
    "typescript": "^5.7.2",
    "vite": "^6.0.6",
    "wait-on": "^8.0.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "keytar"
    ]
  }
}
